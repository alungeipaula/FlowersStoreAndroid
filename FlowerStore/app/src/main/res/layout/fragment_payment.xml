<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/lightBackground">

    <TextView
        android:id="@+id/intro_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Card Details"
        android:layout_marginLeft="10dp"
        style="@style/cartAttributes"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card number"
        android:layout_margin="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/holder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Holder name"
        android:layout_margin="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/expiry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiry date"
        android:layout_margin="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:id="@+id/security_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Security code"
        android:layout_margin="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirmation_payment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkSilver"
        android:textColor="@color/white"
        android:text="@string/confirm"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        />

</LinearLayout>